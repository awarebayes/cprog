{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc сборка активного файла",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-Wall",
                "-Werror",
                "-std=c99",
                "-lm"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Задача создана отладчиком."
        },
        {
            "label": "Compile file",
            "type": "shell",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}/bin/${fileBasenameNoExtension}",
                "-Wall",
                "-Werror",
                "-Wpedantic",
                "-Wextra",
                "-Wredundant-decls",
                "-Wsign-conversion",
                "-lm",
                "-std=c99"
            ],
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "run c file",
            "prelaunchtask": "compile file",
            "type": "shell",
            "command": "${workspacefolder}/bin/${filebasenamenoextension}",
            "problemmatcher": []
        },
        {
            "label": "Style check all",
            "type": "shell",
            "command": "./scripts/style_check.sh",
            "problemmatcher": []
        },
        {
            "label": "Test all",
            "type": "shell",
            "command": "./scripts/run_tests.sh",
            "problemmatcher": [],
            "problemMatcher": []
        }
    ],
    "version": "2.0.0"
}